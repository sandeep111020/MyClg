<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".AddMeetingScreen">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="100dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:background="@drawable/clglogo"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="My WISTM"
                android:textAlignment="center"
                android:textSize="40dp"
                android:textStyle="bold"
                android:textColor="#D04A4A"/>
            <!--<TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="My WISTM"
                android:fontFamily="@font/playlist"
                android:textAlignment="center"
                android:textSize="40dp"
                android:textStyle="bold"
                android:textColor="#D04A4A"/>-->
        </LinearLayout>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:id="@+id/meettitle"
            android:hint="  Enter the meet title"
            android:textColorHint="#000000"
            android:background="@drawable/button"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:id="@+id/meetlink"
            android:hint="  Enter the meet Description"
            android:textColorHint="#000000"
            android:background="@drawable/button"/>
  <!--      <TimePicker
            android:id="@+id/simpleTimePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:padding="20dp"
            android:timePickerMode="spinner" />-->
        <Button
            android:layout_width="match_parent"
            android:text="Select date"
            android:textAllCaps="false"

            android:background="@color/teal_200"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:id="@+id/btn_date"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="25dp" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_time"
            android:text="Select Time"
            android:textAllCaps="false"
            android:background="@color/teal_200"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="25dp" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/participant2"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/participant3"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"/>

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meet for all" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginTop="20dp"
            android:id="@+id/submitbutton"
            android:hint=" Submit"

            android:textColorHint="#000000"
            android:background="@drawable/button"/>



    </LinearLayout>

</ScrollView>